# WCAGAI v4.0 Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/wcagai_v4"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# External API Keys
SERPAPI_KEY="your-serpapi-key-for-site-discovery"
XAI_API_KEY="your-xai-api-key-for-ai-fixes"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# Redis Configuration (for caching)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Server Configuration
NODE_ENV="development"
PORT="8080"
API_VERSION="v4.0"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="10000"

# Email Configuration (for reports and notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@wcagai.com"
FROM_NAME="WCAGAI v4.0"

# Analytics and Monitoring
MIXPANEL_TOKEN="your-mixpanel-token"
SENTRY_DSN="your-sentry-dsn"

# File Storage (for reports and exports)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="wcagai-reports"

# Puppeteer Configuration
PUPPETEER_HEADLESS="true"
PUPPETEER_EXECUTABLE_PATH=""
PUPPETEER_TIMEOUT="30000"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Security
CORS_ORIGIN="http://localhost:3000"
HELMET_ENABLED="true"

# Billing Configuration
STRIPE_WEBHOOK_ENDPOINT="/api/webhooks/stripe"
BILLING_WEBHOOK_SECRET="your-billing-webhook-secret"

# Feature Flags
ENABLE_AI_FIXES="true"
ENABLE_VERTICAL_DISCOVERY="true"
ENABLE_LEGAL_RISK_SCORING="true"
ENABLE_BENCHMARK_REPORTS="true"

# Vertical Benchmarks (2025 Data)
HEALTHCARE_BENCHMARK="0.74"
FINTECH_BENCHMARK="0.31"
ECOMMERCE_BENCHMARK="0.45"

# Revenue Targets
MRR_TARGET="43300000"  # $43M ARR target
CUSTOMER_TARGET="10000"  # 10K customer target

# Compliance Deadlines
EAA_DEADLINE="2025-06-28"
ADA_DEADLINE="2025-12-31"

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING="true"
SLOW_QUERY_THRESHOLD="1000"
SCAN_TIMEOUT="60000"