# =============================================================================
# WCAG AI Platform v5 - Environment Configuration
# =============================================================================

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/wcagai_v5"

# Redis / BullMQ
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-with-openssl-rand-base64-32"

# AI Services
OPENAI_API_KEY="sk-your-openai-api-key-here"
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Monitoring
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
DATADOG_API_KEY=""

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@wcagai.com"

# Storage (for reports, screenshots)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="wcagai-reports"

# Deployment
VERCEL_URL=""
VERCEL_ENV="development"

# Security
ENCRYPTION_KEY="your-encryption-key-here-32-chars-minimum"
JWT_SECRET="your-jwt-secret-here"
SESSION_SECRET="your-session-secret-here"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds

# Feature Flags
ENABLE_MFA="true"
ENABLE_OAUTH="true"
ENABLE_TEMPLATE_GENERATION="true"
ENABLE_BULK_PROCESSING="true"

# Compliance
SOC2_AUDIT_LOG="true"
FDCPA_STRICT_MODE="true"

# Development
NODE_ENV="development"
LOG_LEVEL="info"
DEBUG="false"
