# ============================================================================
# InfinitySoul Platform - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="InfinitySoul"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Database (Vercel Postgres or Neon)
# ----------------------------------------------------------------------------
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://postgres:password@localhost:5432/infinitysoul
DATABASE_URL_POOLED=postgresql://postgres:password@localhost:5432/infinitysoul?pgbouncer=true

# ----------------------------------------------------------------------------
# Redis Cache (Upstash Redis)
# ----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# ----------------------------------------------------------------------------
# AI Services
# ----------------------------------------------------------------------------
# OpenAI API (for advanced analysis)
OPENAI_API_KEY=sk-your-openai-key

# Google Gemini API (for compliance intelligence)
GEMINI_API_KEY=your-gemini-key

# ----------------------------------------------------------------------------
# External APIs
# ----------------------------------------------------------------------------
# SerpAPI (for competitor discovery)
SERPAPI_KEY=your-serpapi-key

# HubSpot CRM Integration
HUBSPOT_API_KEY=your-hubspot-key
HUBSPOT_PORTAL_ID=your-portal-id

# Hunter.io (for email enrichment)
HUNTER_API_KEY=your-hunter-key

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Prompt injection detection threshold (0.0 - 1.0)
PROMPT_INJECTION_THRESHOLD=0.7

# ----------------------------------------------------------------------------
# Scanner Configuration
# ----------------------------------------------------------------------------
# Browser automation
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_HEADLESS=true

# Concurrent scan limit
MAX_CONCURRENT_SCANS=3

# Scan timeout (milliseconds)
SCAN_TIMEOUT_MS=60000

# ----------------------------------------------------------------------------
# Multi-Tenancy
# ----------------------------------------------------------------------------
DEFAULT_TENANT_ID=infinitysoul

# Violation threshold for badge generation
VIOLATION_THRESHOLD=5

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
FEATURE_GEMINI_CHAT=true
FEATURE_AAG_BADGES=true
FEATURE_VISUAL_REGRESSION=true
FEATURE_PDF_REPORTS=true
FEATURE_HUBSPOT_SYNC=true
FEATURE_EMAIL_ENRICHMENT=true

# ----------------------------------------------------------------------------
# Monitoring & Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# ----------------------------------------------------------------------------
# Email Service (Optional - for notifications)
# ----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@infinitysoul.com

# ----------------------------------------------------------------------------
# Testing & Development
# ----------------------------------------------------------------------------
TEST_MODE=false
MOCK_GEMINI=false
PLAYWRIGHT_BROWSER=chromium
