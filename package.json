{
  "name": "wcag-ai-platform",
  "version": "1.0.0",
  "description": "WCAG AI Platform - Monorepo for compliance intelligence",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "tsx apps/scanner/src/scripts/validate.ts",
    "build": "tsc --build",
    "clean": "rm -rf dist node_modules",
    "test": "echo \"Tests to be implemented\"",
    "db:generate": "cd packages/db && npx prisma generate",
    "db:push": "cd packages/db && npx prisma db push",
    "db:migrate": "cd packages/db && npx prisma migrate dev"
  },
  "keywords": [
    "wcag",
    "accessibility",
    "compliance",
    "ai",
    "monorepo"
  ],
  "author": "WCAGAI Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bullmq": "^4.15.0",
    "puppeteer": "^21.5.0",
    "@axe-core/puppeteer": "^4.8.0",
    "pdf-lib": "^1.17.1",
    "openai": "^4.20.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "prisma": "^5.6.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
